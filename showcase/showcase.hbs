<div class="showcase">

  <ul class="showcase-item-list">
    {{#unless isotope}}
      {{> showcase-item
        title="Isotope"
        description="Filter & sort magical layouts"
        isIsotopeItem=true
        url="https://isotope.metafizzy.co"
      }}
    {{/unless}}

    {{#unless infiniteScroll}}
      {{> showcase-item
        title="Infinite Scroll"
        description="Automatically add next page"
        isInfiniteScrollItem=true
        url="https://infinite-scroll.com"
      }}
    {{/unless}}

    {{#unless flickity}}
      {{> showcase-item
        title="Flickity"
        description="Touch, responsive, flickable carousels"
        isFlickityItem=true
        url="https://flickity.metafizzy.co"
      }}
    {{/unless}}

    {{#unless packery}}
      {{> showcase-item
        title="Packery"
        description="Gapless, draggable grid layouts"
        isPackeryItem=true
        url="https://packery.metafizzy.co"
      }}
    {{/unless}}

    {{#unless logo-pizza}}
      {{> showcase-item
        title="Logo Pizza"
        description="Hot & ready logos for sale"
        isLogoPizzaItem=true
        url="http://logo.pizza"
      }}
    {{/unless}}

  </ul> {{! .showcase-item-list }}

</div>
